{
  "name": "Link Panels",
  "version": "0.0.10",
  "manifest_version": 2,
  "description": "Create panels from links",
  "background": {
    "scripts": ["/js/background.js"]
  },
  "applications": {
    "gecko": {
      "id": "{0a6e67a3-fda8-454f-b6a1-b85b53c4c6ef}",
      "strict_min_version": "42.0"
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["/js/content.js"]
  }],
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Create a link panel based on the page"
    }
  },
  "browser_action": {
    "default_icon": "img/128x128.png"
  },
  "icons": {
    "48": "img/48x48.png",
    "128": "img/128x128.png"
  },
  "options_ui": {
    "page": "./options.html",
    "chrome_style": true
  }
}
