{
  "name": "Link Panels",
  "version": "0.16",
  "manifest_version": 2,
  "description": "Create panels from links",
  "background": {
    "scripts": ["/js/background.js"]
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "global": true,
      "description": "Create a link panel based on the page"
    }
  },
  "browser_action": {
    "default_icon": "img/128x128.png"
  },
  "icons": {
    "48": "img/48x48.png",
    "128": "img/128x128.png"
  },
  "options_ui": {
    "page": "./options.html",
    "chrome_style": true
  }
}
